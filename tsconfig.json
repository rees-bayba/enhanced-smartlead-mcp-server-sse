{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // Or ES2022, consistent with target
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false, // Key change for permissiveness
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, // Can be false for more permissiveness
    "resolveJsonModule": true,
    "noImplicitAny": false // Allow if strict is false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
